<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/listing_layout"
    tools:context=".ListingActivity">

    <ImageView
        android:id="@+id/iv_select_image"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_browse"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/iv_select_image"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:text="Browse Image" />

    <EditText
        android:id="@+id/name_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_browse"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:hint="product name"
        android:inputType="textMultiLine"
         />

    <EditText
        android:id="@+id/description_product"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/name_product"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:hint="please include product description and your contact info"
        android:inputType="textMultiLine"
         />

    <EditText
        android:id="@+id/price_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_product"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:hint="product price"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btn_upload_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_product"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:padding="17dp"
        android:text="Add Product"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />




    <Button
        android:id="@+id/btn_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_upload_product"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:padding="17dp"
        android:text="Back To Menu"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:backgroundTint="#C5CAE9" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/circular_indicator"
        android:layout_below="@id/btn_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="180dp"
        />

</RelativeLayout>